pipeline{
        agent any
              stages{
                      stage('one'){
                                  steps{
                                          echo 'Hello, this is Arun Rajput'
                                          }
                                   }
                                   stage('two'){
                                                steps{
                                                        input('Do you want to proceed')
                                                        }
                                                }
                                   stage('three'){
                                   when {
                                          not {
                                                 branch "master"
                                                }
                                          }      
                                          steps{ echo "hello"
                                                }
                                           }   
                                       
                                       stage('four')  {
                                                         parallel  {
                                                         stage('unit test')
                                                                    steps{
                                                                    echo "running the unit test"
                                                                    }
                                                                    }
                                                       stage ('intergration  test')  {
                                                                                      steps{
                                                                                      echo "running the intergration testing"
                                                                                    }
                                                                                    }
                                                                                    }
                                                       }
                                                       }
                                                       
                                                    
